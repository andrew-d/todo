{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    "__DEV__": true,
    "__SERVER__": true,
    "expect": true
  },
  "rules": {
    // Strict mode
    "strict": [2, "global"],

    // Code style
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "comma-dangle": [2, "always-multiline"],
    "indent": [2, 2],
    "quotes": [2, "single"],
    "semi": [2, "always"],

    // React rules
    "react/jsx-boolean-value": 1,
    "react/jsx-quotes": [2, "single", "avoid-escape"],
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "react/no-unknown-property": 1,
    "react/prop-types": 2,
    "react/wrap-multilines": 1
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "jsx": true,
    "modules": true,
    "superInFunctions": true,
    "templateStrings": true
  }
}
